<h1>New House</h1>

<%= form_with model: @house do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% @house.errors.full_messages_for(:title).each do |message| %>
    <div><%= message %></div>
    <%end%>
  </div>

  <div>
    <%= form.label :image %><br>
    <%= form.text_field :image %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
    <% @house.errors.full_messages_for(:description).each do |message| %>
    <div><%= message %></div>
    <%end%>
  </div>

  

  <div>
    <%= form.label :price %><br>
    <%= form.text_field :price %>
    <% @house.errors.full_messages_for(:price).each do |message| %>
    <div><%= message %></div>
    <%end%>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
